<div class="message-container <%= message.pinned && "show-pinned" %>" data-chatroom-id="<%= message.chatroom.id %>">
  <div class='message-wrapper'>
    <p class='show-pin <%= message.pinned && "visible" %>'><%= fa_icon "map-pin active-red" %> Pinned</p>
    <div class="message-box">
      <div class="owner-img"></div>
      <div>
        <div class="message-owner"><strong><%= message.user_username %></strong> <span class="timestamp"><%= message.timestamp %></span></div>
        <div class="message-content"><%= sanitize markdown emojify(message.body) %></div>
      </div>
    </div>
  </div>
  <div class="btn-group btn-group-sm" role="group" aria-label="Basic example" message-id="<%= message.id %>">
    <button type="button" class="btn btn-secondary star-msg" data-toggle="tooltip" data-placement="top" title="Star message"><%= fa_icon "star" %></button>
    <button type="button" class="btn btn-secondary pin-msg" data-toggle="tooltip" data-placement="top" title="Pin message"><%= persist_pin(message) %></button>
    <button type="button" class="btn btn-secondary edit-msg" data-toggle="tooltip" data-placement="top" title="Edit message"><%= fa_icon "edit" %></button>
    <button type="button" class="btn btn-secondary delete-msg" data-toggle="tooltip" data-placement="top" title="Delete message"><%= fa_icon "close" %></button>
  </div>
</div>
