<!DOCTYPE html>
<html>
  <head>
    <title>Chattie</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render  "layouts/partials/navbar" %>
    <%= render "layouts/partials/flash" %>

    <div class="fluid-container main">
      <div class="row">
        <div class="col-sm-2 left-side">
          <div class="scroll">
          <% if user_signed_in? %>
           <div class="chatroom-header"> <span>Chatrooms</span><p><%= link_to new_chatroom_path do %>
              <%= fa_icon "plus-circle add-icon" %>
            <% end %></p>
            </div>
                <% if current_user.chatrooms.length > 0 %>
                  <% current_user.chatrooms.each do |chatroom| %>
                    <div class="list"><%= fa_icon "hashtag bullet" %> <%= link_to chatroom.name, chatroom, data: {behavior: "chatroom-link", chatroom_id: chatroom.id} %><span class="badge badge-default hide-badge chatroom-<%= chatroom.id %>-span">New</span></div>
                  <% end %>
                <% else %>
                  <div class="nothing">
                    <p>No Channels yet!!!</p>
                  </div>
                <% end %>
            </br >
            <div class="direct-message">
            <h6>Direct Messages</h6>
              <% if (get_other_users).length > 0 %>
                <% (get_other_users).each do |user| %>
                  <div class="list"><%= fa_icon "hashtag bullet" %> <%= link_to user.username, direct_message_path(user.id), data: {behavior: "chatroom-link", chatroom_id: Chatroom.direct_message_for_users([current_user, user]).id } %></div>
                <% end %>
              <% else %>
               <div class="nothing">
                <p>Nobody here yet!!!</p>
              </div>
              <% end %>
            <% end %>
            </div>
        </div>
        </div>

        <div class="col-sm-10 offset-sm-2 right-side">
          <%= yield %>
        </div>
      </div>
    </div>
    
  </body>
</html>
