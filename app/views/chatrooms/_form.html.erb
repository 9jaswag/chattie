<%= form_with(model: chatroom, local: true) do |form| %>
  <% if chatroom.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chatroom.errors.count, "error") %> prohibited this chatroom from being saved:</h2>

      <ul>
      <% chatroom.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :chatroom_name, autofocus: true %>
    <%= form.select "access", "<option value='private'>Private</option><option value='public' selected>Public</option>".html_safe %>
    <%= form.hidden_field :creator, :value => current_user.username %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
