<div class='registration'>
  <div class="registration-note">
    <div class="note-body">
      <div class="brand-logo"></div>
      <%= image_tag('internet.svg', size: "100x100", alt: "Brand Logo", class: "img-logo")  %>

      <h1>Welcome Back!</h1>
      <p>To keep connected with us and your peeps, kindly login with your personal info.</p>
      <%= link_to 'Sign in', new_session_path(resource_name), class: "form-button" %>
    </div>
  </div>
  <div class="registration-form">
    <h1 class="form-header">Create Account</h1>
    <div class="form-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>

      <div class='form-row'>
        <div class="col form-group">
          <%= f.text_field :first_name, class: 'form-control form-control-sm', placeholder: "First Name" %>
        </div>

        <div class="col form-group">
          <%= f.text_field :last_name, class: 'form-control form-control-sm', placeholder: "Last Name"%>
        </div>
      </div>

      <div class='form-row'>
        <div class="col form-group">

          <%= f.text_field :username, class: 'form-control form-control-sm', placeholder: "Username" %>
        </div>

        <div class="col form-group">

          <%= f.email_field :email, class: 'form-control form-control-sm', placeholder: "Email Address"%>
        </div>
      </div>

      <div class='form-row'>
        <div class="col form-group">

          <%= f.text_field :qoute, class: 'form-control form-control-sm', placeholder: 'Quote (Optional)'%>
        </div>

        <div class="col form-group">

          <%= f.text_field :job_description, class: 'form-control form-control-sm', placeholder: "Job Description (Optional)"%>
        </div>
      </div>

      <div class='form-row'>
        <div class="col form-group">

          <% if @minimum_password_length %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-sm', placeholder: "#{@minimum_password_length} characters minimum" %>
          <% end %><br />
        </div>

        <div class="col form-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-sm', placeholder: "Confirm Password"%>
        </div>
      </div>

        <div class="form-group">
          <%= f.submit "Sign up", 'data-disable-with' => "Signing up....", class: "slide-out form-button" %>
        </div>
      <% end %>
    </div>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
</div>
</div>
