<div class="sign-up">
  <div class="col-sm-12">

    <h2 class="text-center">Sign Up</h2>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

    <div class='form-row'>
      <div class="col form-group">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: 'form-control form-control-sm', required: true %>
      </div>

      <div class="col form-group">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name, class: 'form-control form-control-sm', required: true %>
      </div>
    </div>

    <div class='form-row'>
      <div class="col form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: 'form-control form-control-sm', required: true %>
      </div>

      <div class="col form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control form-control-sm', required: true  %>
      </div>
    </div>

    <div class='form-row'>
      <div class="col form-group">
        <%= f.label :qoute %><br />
        <%= f.text_field :qoute, class: 'form-control form-control-sm', placeholder: 'Something light'%>
      </div>

      <div class="col form-group">
        <%= f.label :job_description %><br />
        <%= f.text_field :job_description, class: 'form-control form-control-sm'%>
      </div>
    </div>

    <div class='form-row'>
      <div class="col form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-sm', placeholder: "#{@minimum_password_length} characters minimum", required: true  %>
        <% end %><br />
      </div>

      <div class="col form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control form-control-sm', required: true  %>
      </div>
    </div>

      <div class="form-group">
        <%= f.submit "Sign up", 'data-disable-with' => "Signing up....", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
